{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./apps/activity-kit-example/*"],
      "@kingstinct/react-native-activity-kit": [
        "./packages/react-native-activity-kit/src/index.ts"
      ],
      "@kingstinct/react-native-activity-kit/*": [
        "./packages/react-native-activity-kit/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
