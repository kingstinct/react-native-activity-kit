{
  "name": "react-native-activity-kit-mono",
  "private": true,
  "scripts": {
    "changeset-release": "cp README.md packages/react-native-activity-kit && bunx changeset publish",
    "clean:node_modules": "rm -rf node_modules/ && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "codegen": "cd packages/react-native-activity-kit && bun run specs && cd ../../apps/activity-kit-example/ios && pod install",
    "create-changeset": "bunx changeset",
    "lint-fix": "bunx @biomejs/biome check --fix",
    "lint": "bunx @biomejs/biome check",
    "prepare": "husky",
    "reinstall": "bun run clean:node_modules && bun install",
    "swiftlint": "swiftlint",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.swift": "swiftlint --fix",
    "*.ts": "bunx @biomejs/biome check --fix --no-errors-on-unmatched",
    "*.tsx": "bunx @biomejs/biome check --fix --no-errors-on-unmatched",
    "*.js": "bunx @biomejs/biome check --fix --no-errors-on-unmatched",
    "*.json": "bunx @biomejs/biome check --fix --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@changesets/cli": "^2.29.5",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "pkg-pr-new": "^0.0.54",
    "typescript": "^5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
