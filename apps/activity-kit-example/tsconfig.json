{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "react-native-activity-kit": [
        "./packages/react-native-activity-kit/src/index.ts"
      ],
      "react-native-activity-kit/*": [
        "./packages/react-native-activity-kit/src/*"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
